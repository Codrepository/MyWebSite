<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/Layout.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/css/bootstrap-rtl.css" rel="stylesheet" />
    <link href="~/Content/css/customestyle.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark static-top d-block">
        <div class="container">
            @Html.ActionLink(@HttpContext.GetGlobalResourceObject("Labels", "HeaderText") as string, "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav">
                    <li class="nav-item ">
                        <a class="nav-link" href="~/Home/Index">@HttpContext.GetGlobalResourceObject("Labels", "Home")</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="~/Home/About">@HttpContext.GetGlobalResourceObject("Labels", "About")</a>
                    </li>
                    
                    <li class="nav-item">
                        <a class="nav-link" href="~/Home/Contact">@HttpContext.GetGlobalResourceObject("Labels", "ContactUs")</a>
                    </li>
                    <li class="nav-item">@Html.Action("Summary", "Cart")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>
    
    
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-3">
                @Html.Action("Menu", "Category")
            </div>
            <div class="col-xs-12 col-sm-9">
                @RenderBody()
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
