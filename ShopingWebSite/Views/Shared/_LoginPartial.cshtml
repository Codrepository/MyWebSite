@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-left" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-left">
       @if (User.IsInRole("Admin"))
       {
        <li>@Html.ActionLink("Admin Panel", "Index", "Admin")</li>
       }

        <li>
            @Html.ActionLink(@HttpContext.GetGlobalResourceObject("Labels", "Hello") as string + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">@HttpContext.GetGlobalResourceObject("Labels", "LogOut")</a></li>
       
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-left">
        <li>@Html.ActionLink(@HttpContext.GetGlobalResourceObject("Labels", "Register") as string, "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink(@HttpContext.GetGlobalResourceObject("Labels", "LogIn") as string, "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
